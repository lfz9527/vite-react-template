# 告诉识别器这是一个 EditorConfig 文件
root = true

[*]
# 所有文件通用设置
indent_style = space       # 使用空格缩进
indent_size = 2            # 缩进为 2 个空格
end_of_line = lf           # 换行符使用 LF（Unix 风格）
charset = utf-8            # 字符集 UTF-8
trim_trailing_whitespace = true  # 自动删除行末空格
insert_final_newline = true      # 文件结尾保留一个空行

[*.md]
# Markdown 文件特殊处理
trim_trailing_whitespace = false # 不删除行末空格（影响换行显示）